@{
    ViewBag.Title = "Home Page";
}

    <div class="row">
        <aside class="col-md-4">
    @using (Ajax.BeginForm("ArticleSearch", new AjaxOptions { UpdateTargetId = "articles-wrapper" }))
            {
            <div class="form-group ">
                <input type="text" class="form-control search-input" name="title" source='@Url.Action("AutoCompleteArticleSearch")' />
                <input type="submit" value="Search" class="search-btn" />
            </div>
         }
            <div class="aside-category-wrapper">
                <div class="aside-title">Categories</div>
                <ul class="aside-list">
                    <li>
                        @Ajax.ActionLink("ALL*",
                        "GetArticles",
                        new AjaxOptions { UpdateTargetId = "articles-wrapper" })
                    </li>
                        @Html.Action("GetCategories")
                </ul>

            </div>
            <div class="aside-tag-wrapper">
                <div class="aside-title">Tags</div>
                <ul class="aside-list">
                    <li>
                        @Ajax.ActionLink("ALL*",
                        "GetArticles",
                        new AjaxOptions { UpdateTargetId = "articles-wrapper" })
                    </li>
                        @Html.Action("GetTags")
                </ul>
            </div>
    </aside>
        <div class="col-md-8">
            <div id="articles-wrapper">
                @Html.Action("GetArticles")
            </div>
        </div>
    </div>


